@model TaskManagementSystem.Models.ProjectTask
@{
    ViewBag.Title = "Set Or Update Deadline";
}

<h2>Set Or Update Deadline</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.Label("Project Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.Project.Name
        </div>
    </div>


    <div class="form-group">
        @Html.Label("ProjectTask Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.Name
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Deadline", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("deadline", new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Set Deadline" class="btn btn-default" />
        </div>
    </div>
</div>}

<div>
    @Html.ActionLink("Back To All Projects", "AllProjects")
</div>

