@model TaskManagementSystem.Models.Project

@{
    ViewBag.Title = "SetBudget";
}

<h2>SetBudget</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("ProjectName", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Name
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Budget", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("budget", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="question" type="submit">
                    <p class="link">Set Budget</p>
                </button>
            </div>
        </div>
    </div>}

<div class="question4">
    <a class="link" href="@Url.Action("AllProjects", new { style = "color: white;text-decoration:none" })">
        Back to Dashboard
    </a>
</div>

