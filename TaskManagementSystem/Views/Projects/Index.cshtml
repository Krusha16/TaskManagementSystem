@model IEnumerable<TaskManagementSystem.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @if (item.StartDate == null)
                {<p>—</p> }
                else
                { @Html.DisplayFor(modelItem => item.StartDate)}
            </td>
            <td>
                @if (item.FinishDate == null)
                {<p>—</p> }
                else
                { @Html.DisplayFor(modelItem => item.FinishDate)}
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("SetBudget", "SetBudget", new { id = item.Id }) |
                @Html.ActionLink("Set Startdate", "SetStartdate", new { id = item.Id }) |
                @Html.ActionLink("Set FinishDate", "SetFinishDate", new { id = item.Id })
            </td>
        </tr>
    }

</table>
