@model TaskManagementSystem.Models.Project

@{
    ViewBag.Title = "SortTasksByCompletion";
}

<h2>SortTasksByCompletion</h2>
@Html.DisplayNameFor(model => model.ApplicationUser.Email) : @Html.DisplayFor(model => model.ApplicationUser.Email)
<br />
@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(model => model.Name)
<br />
@Html.DisplayNameFor(model => model.Priority) : @Html.DisplayFor(model => model.Priority)
<br />
<button>
    @Html.ActionLink("Hide Completed", "SortTasks", new { sortBy = "hideCompleted", projectId = Model.Id })
</button>
<button>
    @Html.ActionLink("Sort By Priority", "SortTasks", new { sortBy = "priority", projectId = Model.Id })
</button>
<br />
<button>
    <a href="@Url.Action("Create", "ProjectTasks")">Create New</a>
</button>
<br />

@Html.DisplayNameFor(model => model.ProjectTasks)
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("ProjectName")
        </th>
        <th>
            @Html.DisplayName("taskName")
        </th>
        <th>
            @Html.DisplayName("CompletionPercentage")
        </th>
        <th>
            @Html.DisplayName("IsCompleted")
        </th>
        <th>
            @Html.DisplayName("Priority")
        </th>
    </tr>

    @foreach (var task in Model.ProjectTasks)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => task.ApplicationUser.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => task.Project.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => task.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => task.CompletionPercentage)
    </td>
    <td>
        @Html.DisplayFor(modelItem => task.IsCompleted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => task.Priority)
    </td>
</tr>
    }
</table>
