@model IEnumerable<TaskManagementSystem.Models.Project>

@{
    ViewBag.Title = "AllProjects";
}

<h2>AllProjects</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<a href="@Url.Action("Index", "Notifications")">
    Notifications(@ViewBag.NotificationCount)
</a>
<br />
<a href="@Url.Action("UnFinishedPassedDeadline", "ProjectTasks")">
    UnFinished Tasks Passed Deadline
</a>
<br />
<a href="@Url.Action("GetProjectsExceededBudget", "Projects")">
    GetProjectsExceededBudget
</a>
<br />
<a href="@Url.Action("ShowAllUsers", "Admins")">
    Show All Users
</a>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectTasks)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.ActionLink(item.Name, "SortTasks", new { sortBy = "completetion", projectId = @item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @if (item.StartDate == null)
                {<p>—</p> }
                else
                { @Html.DisplayFor(modelItem => item.StartDate)}
            </td>
            <td>
                @if (item.FinishDate == null)
                {<p>—</p> }
                else
                { @Html.DisplayFor(modelItem => item.FinishDate)}
            </td>
            <td>
                @if (item.Budget <= 0)
                {<p>—</p> }
                else
                { @Html.DisplayFor(modelItem => item.Budget)}
            </td>
            <td>
                @if (item.TotalCost <= 0)
                {<p>—</p> }
                else
                { @Html.DisplayFor(modelItem => item.TotalCost)}
            </td>
            <td>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName("Email")
                        </th>
                        <th>
                            @Html.DisplayName("ProjectName")
                        </th>
                        <th>
                            @Html.DisplayName("taskName")
                        </th>
                        <th>
                            @Html.DisplayName("CompletionPercentage")
                        </th>
                        <th>
                            @Html.DisplayName("IsCompleted")
                        </th>
                        <th>
                            @Html.DisplayName("Priority")
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var task in item.ProjectTasks)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => task.ApplicationUser.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => task.Project.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => task.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => task.CompletionPercentage)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => task.IsCompleted)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => task.Priority)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "ProjectTasks", new { id = task.Id })">Edit</a> |
                                <a href="@Url.Action("Details", "ProjectTasks", new { id = task.Id })">Details</a> |
                                <a href="@Url.Action("Delete", "ProjectTasks", new { id = task.Id })">Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("SetBudget", "SetBudget", new { id = item.Id }) |
                @Html.ActionLink("Set Deadline", "SetDeadline", new { id = item.Id }) |
                @Html.ActionLink("Set Startdate", "SetStartdate", new { id = item.Id }) |
                @Html.ActionLink("Set FinishDate", "SetFinishDate", new { id = item.Id })
            </td>
        </tr>
    }
</table>
